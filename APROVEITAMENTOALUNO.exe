Algoritmo "AproveitamentoAluno"

Var
// Seção de Declarações das variáveis 
           n1, n2, media: real
           nota: caractere

Inicio
 escreval("-----------------------------------------------------------------")
 escreval("                              Escola                             ")
 escreval("-----------------------------------------------------------------")
 Escreval(" ")
 escreva("Digite a primeira nota: ")
 leia(n1)
 escreva("Digite a segunda nota: ")
 leia(n2)
 media <- (n1+n2)/2
 
 se(media >= 9)entao
    nota <- "A"
   senao
     se(media >= 8) e (media < 9)entao
         nota <- "B"
       senao
         se(media >= 7) e (media < 8) entao
             nota <- "C"
          senao
            se(media >= 6) e (media < 7)entao
               nota <- "D"
            senao
              se(media >= 5) e (media < 6)entao
                 nota <- "E"
              senao
                 nota <- "F"
              fimse
            fimse
         fimse
     fimse
 fimse

   escreval(" ")
   escreval(" A média do aluno: ",media)
   escreval(" O Aproveitamento do aluno: ",nota)


Fimalgoritmo