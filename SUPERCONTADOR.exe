Algoritmo "SuperContador"

// Descrição   : Super contador
// Autor(a)    : Igor
// Data atual  : 29/05/2020
Var
    Esco, C: inteiro
    
    
Inicio

  Repita
   Escreval(" ")
   Escreval("====================")
   escreval("|        MENU      |")
   Escreval("====================")
   Escreval("|  [1] De 1 a 10   |")
   Escreval("|  [2] De 10 a 1   |")
   Escreval("|  [3] Sair        |")
   Escreval("====================")
   Leia(Esco)
    Escolha(Esco)
       caso 1
         C <- 1
         Repita
          Escreva(C)
          C <- C + 1
         Ate (C > 10)

       caso 2
         C <- 10
         Repita
          Escreva(C)
          C <- C - 1
         Ate (C < 1)
   FimEscolha
  Ate (Esco = 3)
   Escreva("Saindo...")





Fimalgoritmo